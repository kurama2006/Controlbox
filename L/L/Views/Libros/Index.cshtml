@model IEnumerable<L.Models.Libro>

@{
    ViewData["Title"] = "Libros";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <style>
        .books-container {
            padding: 2rem;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .page-header {
            border-bottom: 3px solid #2c3e50;
            padding-bottom: 1rem;
            margin-bottom: 2rem;
        }

        .search-form {
            max-width: 600px;
            border-radius: 25px;
            overflow: hidden;
            margin-bottom: 2rem;
        }

        .search-input {
            border: 2px solid #e9ecef;
            padding: 0.8rem 1.5rem;
            transition: all 0.3s ease;
        }

            .search-input:focus {
                border-color: #3498db;
                box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.25);
            }

        .table-custom {
            border-radius: 8px;
            overflow: hidden;
            margin: 1.5rem 0;
        }

            .table-custom thead {
                background: #2c3e50;
                color: white;
            }

            .table-custom th {
                border-bottom: 3px solid #3498db !important;
                padding: 1rem;
            }

            .table-custom tbody tr {
                transition: all 0.2s ease;
            }

                .table-custom tbody tr:hover {
                    background-color: #f8f9fa;
                    transform: translateX(5px);
                }

        .action-buttons .btn {
            padding: 0.4rem 0.8rem;
            margin: 0.2rem;
            border-radius: 20px;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
        }

        .btn-info {
            background: #17a2b8;
            border: none;
        }

        .btn-warning {
            background: #ffc107;
            border: none;
        }

        .btn-danger {
            background: #dc3545;
            border: none;
        }

        footer {
            margin-top: 3rem;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 8px;
            color: #6c757d;
        }

        @@media (max-width: 768px) {
            .books-container {
                padding: 1rem;
            }

            .table-custom {
                display: block;
                overflow-x: auto;
            }

            .action-buttons .btn {
                width: 100%;
                justify-content: center;
                margin: 0.2rem 0;
            }

            .search-form {
                width: 100%;
            }
        }
    </style>
}

<div class="books-container">
    <div class="page-header">
        <h1 class="mb-0">📚 Libros</h1>
        <a asp-action="Create" class="btn btn-success mt-3">
            <i class="fas fa-plus-circle me-2"></i>Nuevo Libro
        </a>
    </div>

    <form asp-controller="Libros" asp-action="Index" method="get" class="search-form d-flex">
        <input type="text" name="searchString"
               class="form-control search-input"
               value="@Context.Request.Query["searchString"]"
               placeholder="Buscar por título o autor...">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-search me-2"></i>Buscar
        </button>
    </form>

    <div class="table-responsive">
        <table class="table table-custom table-hover">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Autor</th>
                    <th>Categoría</th>
                    <th>Fecha Publicación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Titulo</td>
                        <td>@item.Autor</td>
                        <td>
                            <span class="badge bg-primary">
                                @item.Categoria?.Nombre
                            </span>
                        </td>
                        <td>@item.FechaPublicacion?.ToString("dd/MM/yyyy")</td>
                        <td class="action-buttons">
                            <a asp-action="Details" asp-route-id="@item.LibroId"
                               class="btn btn-info btn-sm" title="Detalles">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.LibroId"
                               class="btn btn-warning btn-sm" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.LibroId"
                               class="btn btn-danger btn-sm" title="Eliminar">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <footer>
        © 2025 - Bookworm Nook
    </footer>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
}