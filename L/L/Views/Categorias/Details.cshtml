@model L.Models.Categoria

@{
    ViewData["Title"] = "Detalles de Categoría";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <style>
        .detail-card {
            border-radius: 10px;
            border: none;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

            .detail-card:hover {
                transform: translateY(-5px);
            }

        .card-header {
            background: #2c3e50 !important;
            padding: 1.2rem;
            font-size: 1.1rem;
            border-bottom: 3px solid #28a745;
        }

        .card-body {
            padding: 2rem;
            background: #f8f9fa;
        }

        dl.row {
            margin: 0;
        }

        dt.col-sm-3 {
            color: #34495e;
            font-weight: 600;
            padding: 1rem;
            background: rgba(40, 167, 69, 0.1);
            border-radius: 6px;
        }

        dd.col-sm-9 {
            padding: 1rem;
            font-size: 1.1rem;
            color: #495057;
            border-bottom: 2px solid #e9ecef;
        }

        .card-footer {
            background: #fff;
            padding: 1.5rem;
            border-top: 2px solid #f8f9fa;
        }

        .btn-warning {
            background: #ffc107;
            border: none;
            padding: 0.6rem 1.5rem;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

            .btn-warning:hover {
                background: #e0a800;
                transform: translateY(-1px);
            }

        .btn-secondary {
            background: #6c757d;
            border: none;
            padding: 0.6rem 1.5rem;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

            .btn-secondary:hover {
                background: #5a6268;
            }

        @@media (max-width: 768px) {
            .card-body {
                padding: 1.5rem;
            }

            dt.col-sm-3 {
                width: 100%;
                margin-bottom: 0.5rem;
            }

            dd.col-sm-9 {
                width: 100%;
                padding-left: 1rem;
            }

            .btn {
                width: 100%;
                margin-bottom: 0.5rem;
            }
        }
    </style>
}

<div class="detail-card card shadow-lg">
    <div class="card-header text-white">
        <strong>Información de la Categoría</strong>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model?.CategoriaId" class="btn btn-warning">
            <i class="bi bi-pencil-fill me-2"></i>Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left-circle-fill me-2"></i>Volver a la Lista
        </a>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}