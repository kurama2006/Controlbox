@model L.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoría";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="edit-container">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="edit-title mb-0">
                <i class="fas fa-edit me-2"></i>Editar Categoría
            </h2>
        </div>

        <div class="card-body">
            <form asp-action="Edit" class="category-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CategoriaId" />

                <div class="form-group">
                    <label class="form-label">Nombre de la categoría</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-tag"></i>
                        </span>
                        <input asp-for="Nombre" class="form-control modern-input"
                               placeholder="Ingrese el nombre de la categoría" />
                    </div>
                    <span asp-validation-for="Nombre" class="text-danger validation-message"></span>
                </div>

                <div class="action-buttons mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver a la lista
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-2"></i>Guardar cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .edit-container {
            max-width: 800px;
            margin: 2rem auto;
        }

        .card {
            border-radius: 10px;
            border: none;
        }

        .card-header {
            padding: 1.5rem;
            border-radius: 10px 10px 0 0 !important;
        }

        .edit-title {
            font-size: 1.5rem;
            margin: 0;
            font-weight: 600;
        }

        .input-group-text {
            background: #e9ecef;
            border: none;
            border-radius: 6px 0 0 6px !important;
        }

        .modern-input {
            border: 2px solid #e9ecef;
            border-radius: 0 6px 6px 0 !important;
            padding: 0.8rem;
            transition: all 0.3s ease;
        }

            .modern-input:focus {
                border-color: #28a745;
                box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.25);
            }

        .action-buttons {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
            padding-top: 1.5rem;
            border-top: 2px solid #f8f9fa;
            margin-top: 2rem;
        }

        .btn-success {
            background: #28a745;
            border: none;
            padding: 0.8rem 1.5rem;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

            .btn-success:hover {
                background: #218838;
                transform: translateY(-1px);
            }

        .btn-secondary {
            background: #6c757d;
            border: none;
            transition: all 0.3s ease;
        }

        .validation-message {
            font-size: 0.875rem;
            margin-top: 0.5rem;
            padding-left: 0.5rem;
        }

        @@media (max-width: 768px) {
            .edit-container {
                margin: 1rem;
            }

            .action-buttons {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            .input-group-text {
                padding: 0.8rem;
            }
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
}