@model L.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoría";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="delete-container">
    <div class="alert alert-danger" role="alert">
        <h2 class="alert-heading">
            <i class="fas fa-exclamation-circle me-2"></i>¡Acción irreversible!
        </h2>
        <p class="mb-0">Estás a punto de eliminar permanentemente este registro. ¿Deseas continuar?</p>
    </div>

    <div class="card border-danger shadow-lg">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">
                <i class="fas fa-tag me-2"></i>Categoría a eliminar
            </h3>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>
            </dl>
        </div>

        <div class="card-footer bg-transparent">
            <form asp-action="Delete">
                <input type="hidden" asp-for="CategoriaId" />

                <div class="d-grid gap-3 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Confirmar eliminación
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .delete-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 1rem;
        }

        .alert {
            border-radius: 8px;
            border: 2px solid #dc3545;
            margin-bottom: 2rem;
        }

        .card {
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-3px);
            }

        .card-header {
            padding: 1.2rem;
            font-size: 1.1rem;
        }

        dl.row dt {
            color: #2c3e50;
            font-weight: 600;
        }

        dl.row dd {
            color: #495057;
            font-size: 1.1rem;
            padding: 0.5rem;
            background: #f8f9fa;
            border-radius: 4px;
        }

        .btn-danger {
            background: #dc3545;
            border: none;
            padding: 0.8rem 1.5rem;
            transition: all 0.3s ease;
        }

            .btn-danger:hover {
                background: #bb2d3b;
                transform: scale(1.02);
            }

        .btn-outline-secondary {
            border: 2px solid #6c757d;
            color: #6c757d;
            transition: all 0.3s ease;
        }

            .btn-outline-secondary:hover {
                background: #6c757d;
                color: white;
            }

        @@media (max-width: 768px) {
            .delete-container {
                margin: 1rem;
                padding: 0;
            }

            .d-md-flex {
                flex-direction: column;
                gap: 1rem !important;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            dl.row {
                margin: 0;
            }

                dl.row dt,
                dl.row dd {
                    width: 100%;
                    padding: 0.5rem;
                }
        }
    </style>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
}