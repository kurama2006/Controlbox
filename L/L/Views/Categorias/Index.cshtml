@model IEnumerable<L.Models.Categoria>

@{
    ViewData["Title"] = "Categorías";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <style>
        .categories-container {
            padding: 2rem;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
        }

        h1 {
            color: #2c3e50;
            border-bottom: 3px solid #28a745;
            padding-bottom: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(40, 167, 69, 0.05);
        }

        .table-bordered {
            border: 1px solid #dee2e6;
            border-radius: 8px;
            overflow: hidden;
        }

        .table-dark {
            background: #2c3e50;
            color: white;
        }

            .table-dark th {
                border-bottom: 2px solid #28a745 !important;
            }

        .btn-success {
            background: #28a745;
            border: none;
            padding: 0.6rem 1.5rem;
            transition: all 0.3s ease;
        }

            .btn-success:hover {
                background: #218838;
                transform: translateY(-1px);
            }

        .input-group {
            max-width: 400px;
            border-radius: 25px;
            overflow: hidden;
        }

        .form-control {
            border: 2px solid #dee2e6;
            padding: 0.6rem 1.2rem;
        }

        .btn-outline-primary {
            border-color: #28a745;
            color: #28a745;
            transition: all 0.3s ease;
        }

            .btn-outline-primary:hover {
                background: #28a745;
                color: white;
            }

        .action-buttons .btn {
            padding: 0.4rem 0.8rem;
            border-radius: 20px;
            font-size: 0.9rem;
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
        }

        .btn-info {
            background: #17a2b8;
            border: none;
        }

        .btn-warning {
            background: #ffc107;
            border: none;
        }

        .btn-danger {
            background: #dc3545;
            border: none;
        }

        .bi {
            font-size: 1rem;
        }

        @@media (max-width: 768px) {
            .categories-container {
                padding: 1rem;
            }

            .action-buttons .btn {
                width: 100%;
                margin-bottom: 0.5rem;
            }

            .input-group {
                width: 100%;
            }
        }
    </style>
}

<div class="categories-container">
    <h1>Categorías</h1>

    <a asp-action="Create" class="btn btn-success mb-3">+ Nueva Categoria</a>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Buscar categoría...">
            <button class="btn btn-outline-primary btn-sm" type="button">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td class="action-buttons">
                        <a asp-action="Details" asp-route-id="@item.CategoriaId" class="btn btn-info btn-sm">
                            <i class="bi bi-eye-fill"></i> Detalles
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn btn-warning btn-sm ms-1">
                            <i class="bi bi-pencil-fill"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="btn btn-danger btn-sm ms-1">
                            <i class="bi bi-trash-fill"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}