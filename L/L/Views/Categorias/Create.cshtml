@model L.Models.Categoria

@{
    ViewData["Title"] = "Crear Categoría";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <style>
        .create-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        h1 {
            color: #2c3e50;
            border-bottom: 3px solid #28a745;
            padding-bottom: 0.5rem;
            margin-bottom: 2rem;
        }

        .form-group.row {
            margin-bottom: 1.5rem;
        }

        .col-form-label {
            font-weight: 600;
            color: #34495e;
            padding-top: 0.5rem;
        }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 0.8rem 1rem;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #28a745;
                box-shadow: 0 0 0 4px rgba(40, 167, 69, 0.25);
            }

        .btn-primary {
            background: #28a745;
            border: none;
            padding: 0.8rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background: #218838;
                transform: translateY(-1px);
            }

        .btn-secondary {
            background: #6c757d;
            border: none;
            transition: all 0.3s ease;
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        @@media (max-width: 768px) {
            .create-container {
                margin: 1rem;
                padding: 1.5rem;
            }

            .form-group.row {
                flex-direction: column;
            }

            .col-form-label {
                margin-bottom: 0.5rem;
            }
        }
    </style>
}

<div class="create-container">
    <h1>Crear Nueva Categoría</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group row mb-3">
                    <label asp-for="Nombre" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la categoría" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group d-flex gap-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus-circle-fill me-2"></i>Crear
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle-fill me-2"></i>Volver al Listado
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}