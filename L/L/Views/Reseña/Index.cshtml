@model IEnumerable<L.Models.Reseña>

@{
    ViewData["Title"] = "Reseñas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <style>
        .reviews-container {
            padding: 2rem;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .header-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .search-box {
            max-width: 400px;
            border-radius: 25px;
            overflow: hidden;
        }

        .table-custom {
            border-radius: 8px;
            overflow: hidden;
            margin: 1.5rem 0;
        }

            .table-custom thead {
                background: #2c3e50;
                color: white;
            }

            .table-custom th {
                border-bottom: 3px solid #3498db !important;
                padding: 1rem;
                vertical-align: middle;
            }

        .rating-stars {
            font-size: 1.4rem;
            letter-spacing: 0.2rem;
        }

        .btn-action {
            padding: 0.4rem 0.8rem;
            margin: 0.2rem;
            border-radius: 20px;
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
        }

        .comment-cell {
            max-width: 300px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        footer {
            margin-top: 2rem;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 8px;
            text-align: center;
            color: #6c757d;
        }

        @@media (max-width: 768px) {
            .reviews-container {
                padding: 1rem;
            }

            .header-section {
                flex-direction: column;
                gap: 1rem;
                align-items: flex-start;
            }

            .table-responsive {
                overflow-x: auto;
            }

            .btn-action {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}

<div class="reviews-container">
    <div class="header-section">
        <h1>📝 Reseñas</h1>
        <div class="d-flex gap-3">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus-circle me-2"></i>Nueva Reseña
            </a>
            <div class="search-box input-group">
                <input type="text" id="search-input" class="form-control"
                       placeholder="Buscar reseñas...">
                <button class="btn btn-primary" id="search-button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-custom table-hover">
            <thead>
                <tr>
                    <th>Libro</th>
                    <th>Usuario</th>
                    <th class="text-center">Calificación</th>
                    <th>Comentario</th>
                    <th>Fecha Reseña</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Libro?.Titulo</td>
                        <td>@item.Usuario?.Nombre</td>
                        <td class="text-center rating-stars">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="fas @(i <= item.Calificacion ? "fa-star text-warning" : "fa-star-o text-secondary")"></i>
                            }
                        </td>
                        <td class="comment-cell" title="@item.Comentario">
                            @item.Comentario
                        </td>
                        <td>@item.FechaReseña</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.ReseñaId"
                               class="btn btn-info btn-action" title="Detalles">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.ReseñaId"
                               class="btn btn-warning btn-action" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ReseñaId"
                               class="btn btn-danger btn-action" title="Eliminar">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <footer>
        <p class="mb-0">© 2025 - Bookworm Nook</p>
    </footer>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const searchInput = document.getElementById("search-input");
            const searchButton = document.getElementById("search-button");
            const tableRows = document.querySelectorAll(".table tbody tr");

            searchButton?.addEventListener("click", function() {
                const searchTerm = searchInput.value.toLowerCase();

                tableRows.forEach(row => {
                    const rowText = row.textContent.toLowerCase();
                    row.style.display = rowText.includes(searchTerm) ? "" : "none";
                });
            });
        });
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
}