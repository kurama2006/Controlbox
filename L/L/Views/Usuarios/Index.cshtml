@model IEnumerable<L.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <style>
        /* Estilos personalizados */
        .users-container {
            padding: 2rem;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        h1 {
            color: #2c3e50;
            font-size: 2rem;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 3px solid #3498db;
            display: inline-block;
        }

        .table {
            border-collapse: separate;
            border-spacing: 0 0.8rem;
            margin-top: 1.5rem;
        }

            .table thead th {
                background: #3498db;
                color: white;
                border: none;
                padding: 1rem;
                font-weight: 500;
            }

            .table tbody tr {
                background: #f8f9fa;
                transition: all 0.3s ease;
                border-radius: 8px;
            }

                .table tbody tr:hover {
                    transform: translateX(5px);
                    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
                }

            .table td {
                padding: 1rem;
                vertical-align: middle;
                border: none;
            }

                .table td:first-child {
                    border-radius: 8px 0 0 8px;
                }

                .table td:last-child {
                    border-radius: 0 8px 8px 0;
                }

        a {
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: #28a745;
            border: none;
            padding: 0.6rem 1.5rem;
            border-radius: 6px;
            color: white !important;
        }

            .btn-primary:hover {
                background: #28a760;
            }

        .action-links a {
            padding: 0.3rem 0.6rem;
            margin: 0 0.2rem;
            border-radius: 4px;
        }

            .action-links a[asp-action="Edit"] {
                color: #27ae60;
                background: rgba(39, 174, 96, 0.1);
            }

            .action-links a[asp-action="Details"] {
                color: #2980b9;
                background: rgba(41, 128, 185, 0.1);
            }

            .action-links a[asp-action="Delete"] {
                color: #e74c3c;
                background: rgba(231, 76, 60, 0.1);
            }

        .badge-role {
            padding: 0.4rem 0.8rem;
            border-radius: 15px;
            font-size: 0.85rem;
        }

        .badge-admin {
            background: #3498db;
            color: white;
        }

        .badge-user {
            background: #2ecc71;
            color: white;
        }

        @@media (max-width: 768px) {
            .users-container {
                padding: 1rem;
            }

            .table thead {
                display: none;
            }

            .table tr {
                display: block;
                margin-bottom: 1rem;
            }

            .table td {
                display: block;
                text-align: right;
                position: relative;
                padding-left: 50%;
            }

                .table td::before {
                    content: attr(data-label);
                    position: absolute;
                    left: 0;
                    width: 45%;
                    padding-left: 1rem;
                    font-weight: 600;
                    text-align: left;
                }
        }
    </style>
}

<div class="users-container">
    <h1>Usuarios</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo Usuario</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Correo)</th>
                <th>@Html.DisplayNameFor(model => model.Contrasena)</th>
                <th>@Html.DisplayNameFor(model => model.FechaRegistro)</th>
                <th>Rol Asignado</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-label="Nombre">@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td data-label="Correo">@Html.DisplayFor(modelItem => item.Correo)</td>
                    <td data-label="Contraseña">••••••••</td>
                    <td data-label="Fecha Registro">@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                    <td data-label="Rol">
                        @if (item.Rol != null)
                        {
                            <span class="badge-role @(item.Rol.Nombre == "Admin" ? "badge-admin" : "badge-user")">
                                @item.Rol.Nombre
                            </span>
                        }
                        else
                        {
                            <span class="text-muted">Sin rol</span>
                        }
                    </td>
                    <td class="action-links">
                        <a asp-action="Edit" asp-route-id="@item.UsuarioId">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.UsuarioId">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.UsuarioId">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
}