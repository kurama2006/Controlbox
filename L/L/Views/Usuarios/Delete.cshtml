@model L.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <style>
        .delete-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .delete-header {
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
            padding: 1.5rem;
            border-radius: 8px 8px 0 0;
            margin-bottom: 2rem;
        }

        .detail-item {
            padding: 1rem;
            border-bottom: 1px solid #eee;
        }

        .detail-label {
            color: #2c3e50;
            font-weight: 600;
            font-size: 0.95rem;
        }

        .detail-value {
            color: #495057;
            font-size: 1.1rem;
        }

        .password-display {
            letter-spacing: 0.2em;
            font-family: monospace;
        }

        .action-buttons {
            margin-top: 2rem;
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
        }

        @@media (max-width: 768px) {
            .delete-container {
                margin: 1rem;
                padding: 1.5rem;
            }

            .action-buttons {
                flex-direction: column;
            }

            .btn {
                width: 100%;
            }
        }
    </style>
}

<div class="delete-container">
    <div class="delete-header">
        <h3 class="mb-0">
            <i class="fas fa-exclamation-triangle me-2"></i>Eliminar Usuario
        </h3>
        <p class="mb-0 mt-2">¿Estás seguro de eliminar permanentemente este usuario?</p>
    </div>

    <div class="card-body">
        <div class="detail-item">
            <div class="detail-label">Nombre</div>
            <div class="detail-value">@Model.Nombre</div>
        </div>

        <div class="detail-item">
            <div class="detail-label">Correo electrónico</div>
            <div class="detail-value">@Model.Correo</div>
        </div>

        <div class="detail-item">
            <div class="detail-label">Contraseña</div>
            <div class="detail-value password-display">••••••••</div>
        </div>

        <div class="detail-item">
            <div class="detail-label">Fecha de Registro</div>
            <div class="detail-value">
                @(Model.FechaRegistro?.ToString("dd/MM/yyyy HH:mm") ?? "No registrada")
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UsuarioId" />
        <div class="action-buttons">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt me-2"></i>Confirmar Eliminación
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Volver al Listado
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
}